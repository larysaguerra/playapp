<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_app"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    android:layout_marginLeft="@dimen/margin_card_horizontal_app"
    android:layout_marginRight="@dimen/margin_card_horizontal_app"
    android:layout_marginTop="@dimen/margin_card_vertical_app"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="@dimen/min_height_app"
        android:gravity="center_vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/image_app"
            android:layout_width="@dimen/image_app"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_marginRight="10dp"
            android:transitionName="@string/transition_image"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_app"
                style="@style/TextStyleBody.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="top|start"
                android:maxLines="2"
                android:ellipsize="end"
                android:textStyle="bold"
                android:text="@string/app_name"
                android:transitionName="@string/transition_name" />

            <TextView
                android:id="@+id/title_app"
                style="@style/TextStyleBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="top|start"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="@string/app_name"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/category_app"
                style="@style/TextStyleBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="center|start"
                android:text="@string/app_name" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom|end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/price_currency_app"
                    style="@style/TextStyleBody.Accent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/app_name" />

                <TextView
                    style="@style/TextStyleBody.Accent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=": " />

                <TextView
                    android:id="@+id/price_amount_app"
                    style="@style/TextStyleBody.Accent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="@string/app_name" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>